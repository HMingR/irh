<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.imuster.user.provider.dao.InterestTagInfoDao">

	<!-- interest_tag_info 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            tag_name AS tagName,
            manager_id AS managerId,
            create_time AS createTime,
            update_time AS updateTime,
            state 
		]]>
	</sql>

	<!-- interest_tag_info 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM interest_tag_info]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
            <if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
            <if test="tagName != null and tagName != ''"><![CDATA[AND tag_name like "%"#{tagName}"%"]]></if>
            <if test="managerId != null and managerId != ''"><![CDATA[AND manager_id = #{managerId}]]></if>
            <if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
            <if test="updateTime != null and updateTime != ''"><![CDATA[AND update_time = #{updateTime}]]></if>
            <if test="state != null and state != ''"><![CDATA[AND state = #{state}]]></if> 
            <if test="state == null or state == ''"><![CDATA[AND state != 1]]></if>
			<if test="searchStartTime != null and searchStartTime != ''"><![CDATA[AND create_time >= #{searchStartTime}]]></if>
			<if test="searchEndTime != null and searchEndTime != ''"><![CDATA[AND create_time <= #{searchEndTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="tagName != null"><![CDATA[tag_name = #{tagName},]]></if>
			<if test="managerId != null"><![CDATA[manager_id = #{managerId},]]></if>
			<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
			<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
			<if test="state != null"><![CDATA[state = #{state},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="interestTagInfo" >
		<![CDATA[
			INSERT INTO interest_tag_info
				(
                id, 
                tag_name, 
                manager_id, 
                create_time, 
                update_time, 
                state 
				)
			VALUES
				(
                #{id}, 
                #{tagName}, 
                #{managerId}, 
                #{createTime}, 
                #{updateTime}, 
                #{state} 
				)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM interest_tag_info WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondition" parameterType="interestTagInfo" >
		<![CDATA[DELETE FROM interest_tag_info]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="interestTagInfo" >
		<![CDATA[UPDATE interest_tag_info]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="interestTagInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="interestTagInfo" resultType="interestTagInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="interestTagInfo" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	<select id="selectTagNameById" parameterType="long" resultType="string">
		<![CDATA[SELECT tag_name]]>
		<include refid="QUERY_FROM_TABLE"/>
		WHERE id = #{id}
	</select>
	
</mapper>