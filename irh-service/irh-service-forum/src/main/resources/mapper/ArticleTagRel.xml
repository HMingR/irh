<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.imuster.life.provider.dao.ArticleTagRelDao">

	<!-- article_tag_rel 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            tag_id AS tagId,
            article_id AS articleId 
		]]>
	</sql>

	<!-- article_tag_rel 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM article_tag_rel]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
            <if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
            <if test="tagId != null and tagId != ''"><![CDATA[AND tag_id = #{tagId}]]></if>
            <if test="articleId != null and articleId != ''"><![CDATA[AND article_id = #{articleId}]]></if> 
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="tagId != null"><![CDATA[tag_id = #{tagId},]]></if>
			<if test="articleId != null"><![CDATA[article_id = #{articleId},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="articleTagRel" >
		<![CDATA[
			INSERT INTO article_tag_rel
				(
                id, 
                tag_id, 
                article_id 
				)
			VALUES
				(
                #{id}, 
                #{tagId}, 
                #{articleId} 
				)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM article_tag_rel WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondition" parameterType="articleTagRel" >
		<![CDATA[DELETE FROM article_tag_rel]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="articleTagRel" >
		<![CDATA[UPDATE article_tag_rel]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="articleTagRel">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="articleTagRel" resultType="articleTagRel">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="articleTagRel" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	<select id="selectTagNameByArticleId" parameterType="long" resultType="string">
		<![CDATA[
  			SELECT
  			at.name
			FROM
				article_tag_rel AS atr
				LEFT JOIN ( SELECT `name`, id FROM article_tag WHERE state != 1) AS at ON at.id = atr.tag_id
			WHERE
				atr.article_id = #{id}
  		]]>
	</select>

	<select id="selectArticleIdByPageAndTagIds" parameterType="articleTagRel" resultType="long">
		<![CDATA[
  			SELECT
  				article_id
			FROM
				article_tag_rel
			WHERE tag_id IN
  		]]>
		<foreach collection="tagIds" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
		<![CDATA[LIMIT #{startIndex}, #{pageSize}]]>
	</select>
	
</mapper>